<div class="container shadow">
    <img src="images/upload.png" class="img-responsive" style="margin:0px">
    <br> <br>
    <br>

    <form class="form-horizontal" action="/productSave" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label class="control-label col-sm-2" for="pname">Product name:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="pname" id="pname" placeholder="Your product name">
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-sm-2" for="pdsc">Product description:</label>
            <div class="col-sm-10">
                <textarea rows="3" class="form-control" id="pdsc" name="pdsc" placeholder="Your product description"></textarea>
            </div>
        </div>




        <div class="form-group">
            <label class="control-label col-sm-2">Item condition:</label>
            <div class="col-sm-10">

                <label class="radio-inline"><input type="radio" name="condition" value="New">New</label>
                <label class="radio-inline"><input type="radio" name="condition" value="Used">Used</label>
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-sm-2" for="number">Category:</label>
            <div class="col-sm-10">
                <div class="checkbox">
                    <label><input type="checkbox" value="ecat" name="ecat">Electronics</label>
                </div>
                <div class="checkbox">
                    <label><input type="checkbox" value="efas" name="efas">Fashion</label>
                </div>
                <div class="checkbox">
                    <label><input type="checkbox" value="esta" name="esta">Stationary</label>
                </div>
            </div>
        </div>





        <div class="form-group">
            <label class="control-label col-sm-2" for="pimg">Product image:</label>
            <div class="col-sm-10">
                <input type="file" accept="image/png" name="pimgg" class="form-control" style="border:none;box-shadow:0px 0px; border-radius:0px;">
            </div>
        </div>
        <br>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-success btn-lg btn-block">Upload</button>
            </div>

        </div>
    </form>

</div>

